<Window x:Class="HealthApp.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SignUp" Height="300" Width="300" ResizeMode="NoResize" Icon="assets/icon.png">
    <Grid Margin="0,0,-6,0">
        <TextBox x:Name="namebox" HorizontalAlignment="Left" Height="22" Margin="88,42,0,0" TextWrapping="Wrap" Text="&#xD;&#xA;" VerticalAlignment="Top" Width="132"/>
        <TextBlock HorizontalAlignment="Left" Margin="79,18,0,0" TextWrapping="Wrap" Text="Придумайте логин" VerticalAlignment="Top" FontSize="18" Width="163"/>
        <PasswordBox x:Name="pwdbox1" HorizontalAlignment="Left" Margin="88,101,0,0" VerticalAlignment="Top" Width="132" Height="26"/>
        <PasswordBox x:Name="pwdbox2" HorizontalAlignment="Left" Margin="88,164,0,0" VerticalAlignment="Top" Width="132" Height="26"/>
        <TextBlock HorizontalAlignment="Left" Margin="88,77,0,0" TextWrapping="Wrap" Text="Задайте пароль" VerticalAlignment="Top" FontSize="18" Width="153"/>
        <TextBlock HorizontalAlignment="Left" Margin="79,140,0,0" TextWrapping="Wrap" Text="Повторите пароль" VerticalAlignment="Top" FontSize="18"/>
        <Button x:Name="dosignup" Content="Зарегистрироваться" HorizontalAlignment="Left" Margin="88,207,0,0" VerticalAlignment="Top" Width="132" Click="dosignup_Click" Height="36"/>

    </Grid>
</Window>
